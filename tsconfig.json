{
  "compilerOptions": {
    "target": "ES2022",
    "useUnknownInCatchVariables": true,
    "module": "ESNext",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src", 
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
